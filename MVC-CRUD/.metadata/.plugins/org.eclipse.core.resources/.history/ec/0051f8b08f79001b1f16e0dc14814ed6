package com.formvalidation;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.student.StudentRegister;

public class ValidationForm implements Validator {

	public boolean supports(Class<?> clazz) {
		// TODO Auto-generated method stub
		return StudentRegister.class.isAssignableFrom(clazz);
	}

	public void validate(Object target, Errors errors) {
		// TODO Auto-generated method stub
		ValidationUtils.rejectIfEmptyOrWhitespace(errors, 
		         "name", "required.name","Field name is required.");

	}

}
